{
  "description": "A text editor for cURL commands",
  "homepage": "https://github.com/CurlerRoo/CurlerRoo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CurlerRoo/CurlerRoo.git"
  },
  "author": "CurlerRoo <pclover.exe@gmail.com>",
  "main": "./.erb/dll/main.bundle.dev.js",
  "bin": {
    "curlerroo-cli": "cli-dist/cli/index.js"
  },
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && npm run build:dll",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never && npm run build:dll",
    "deploy": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish always",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "prestart": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack --config ./.erb/configs/webpack.config.main.dev.ts",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run prestart && npm run start:renderer",
    "start:main": "concurrently -k -P \"cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --watch --config ./.erb/configs/webpack.config.main.dev.ts\" \"electronmon . -- {@}\" --",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true NODE_OPTIONS=\"-r ts-node/register --no-warnings\" webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "jest"
  },
  "browserslist": [
    "extends browserslist-config-erb"
  ],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist",
      ".erb/dll"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(monaco-editor)/)"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/search": "^6.5.6",
    "@electron/notarize": "^3.0.0",
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.9.2",
    "@tanstack/react-virtual": "^3.0.1",
    "@uiw/react-codemirror": "^4.23.0",
    "acorn": "^8.11.3",
    "bluebird": "^3.7.2",
    "directory-tree": "^3.5.1",
    "electron-debug": "^4.1.0",
    "electron-log": "^5.3.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.3.9",
    "fast-xml-parser": "^4.3.3",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ip": "^2.0.1",
    "is-mobile": "^4.0.0",
    "isbinaryfile": "^5.0.2",
    "lodash": "^4.17.21",
    "memfs": "^4.9.2",
    "mime-types": "^2.1.35",
    "parse5": "^7.1.2",
    "qs": "^6.12.1",
    "quickjs-emscripten": "^0.31.0",
    "rc-dialog": "^9.3.4",
    "rc-dropdown": "^4.1.0",
    "rc-notification": "4.6.1",
    "rc-switch": "^4.1.0",
    "rc-tooltip": "^6.1.3",
    "re-resizable": "^6.9.16",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-github-btn": "^1.4.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.3.0",
    "react-use": "^17.6.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "redux-persist": "^6.0.0",
    "scroll-into-view-if-needed": "^3.1.0",
    "styled-components": "^6.1.19",
    "tmp-promise": "^3.0.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@svgr/webpack": "^8.1.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bluebird": "^3.5.42",
    "@types/encodeurl": "^1.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/ip": "^1.1.3",
    "@types/jest": "^29.5.14",
    "@types/json-to-ast": "^2.1.4",
    "@types/lodash": "^4.17.20",
    "@types/mime-types": "^3.0.1",
    "@types/node": "22.13.10",
    "@types/prettier": "^3.0.0",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "@types/react-highlight-words": "^0.20.0",
    "@types/react-icons": "^3.0.0",
    "@types/react-measure": "^2.0.12",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-test-renderer": "^19.0.0",
    "@types/react-window": "^2.0.0",
    "@types/terser-webpack-plugin": "^5.2.0",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^11.0.0",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^9.1.2",
    "core-js": "^3.41.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "detect-port": "^2.1.0",
    "electron": "^38.5.0",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "electronmon": "^2.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "^4.1.0",
    "eslint-import-resolver-typescript": "^4.1.1",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "iconv-lite": "^0.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "react-refresh": "^0.16.0",
    "react-test-renderer": "^19.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.8.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1"
  },
  "build": {
    "productName": "CurlerRoo",
    "appId": "com.curlerroo.curlerroo",
    "asar": true,
    "afterSign": ".erb/scripts/notarize.js",
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "mac": {
      "icon": "src/assets/icon.icns",
      "sign": ".erb/scripts/notarize.js",
      "notarize": {
        "teamId": "DS3PFP3PPJ"
      },
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "src/assets/entitlements.mac.plist",
      "entitlementsInherit": "src/assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "x64ArchFiles": "**/curl-macos-*-8.16.0/curl"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "src/assets",
      "output": "release/build"
    },
    "extraResources": [
      "./src/assets/**"
    ]
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=14.x",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "version": ">=7.x",
      "onFail": "error"
    }
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**",
      ".erb/dll/**"
    ],
    "logLevel": "quiet"
  }
}
