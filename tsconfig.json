{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@file": ["src/main/lib/file-on-disk"],
      "@send-curl": ["src/main/lib/send-curl-on-electron"],
      "@services": ["src/renderer/services/services-on-electron"],
      "@constants": ["src/shared/constants/constants-on-electron"],
    },
    "outDir": ".erb/dll"
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
